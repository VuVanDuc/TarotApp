<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context=".GameXocDiaActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:orientation="horizontal">
        <!-- BAT DIA-->
        <ImageView
            android:id="@+id/imgChan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:padding="30dp"
            android:src="@drawable/chan" />

        <ImageView
            android:id="@+id/imgBat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:padding="10dp"
            android:src="@drawable/bat" />

        <ImageView
            android:id="@+id/imgLe"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:padding="30dp"
            android:src="@drawable/le" />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/imgPlayMusic"
                android:layout_width="match_parent"
                android:padding="10dp"
                android:layout_height="0dp"
                android:layout_weight="5"
                android:src="@drawable/playmusic" />
            <ImageView
                android:id="@+id/imgStopmusic"
                android:layout_width="match_parent"
                android:padding="10dp"
                android:layout_height="0dp"
                android:layout_weight="5"
                android:src="@drawable/stopmusic" />
        </LinearLayout>



    </LinearLayout>
    <!-- DAT CUOC -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgDatcuoc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:src="@drawable/datcuoc" />

        <TextView
            android:id="@+id/txtCuocChan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:inputType="number"
            android:padding="20dp"
            android:text="0"
            android:textColor="#FAE20F"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/imgCongChan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:src="@drawable/cong" />

        <ImageView
            android:id="@+id/imgKetqua"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2" />

        <ImageView
            android:id="@+id/imgDatcuocLe"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:src="@drawable/datcuoc" />

        <TextView
            android:id="@+id/txtCuocLe"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:inputType="number"
            android:padding="20dp"
            android:text="0"
            android:textColor="#FAE20F"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/imgCongLe"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:src="@drawable/cong" />

    </LinearLayout>

    <!-- BAT DAU -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btnQuaylai"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:layout_weight="2"
            android:background="#005826"
            android:padding="20dp"
            android:scaleType="centerCrop"
            android:src="@drawable/quaylai"/>

        <ImageView
            android:id="@+id/imgVang"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_weight="1"
            android:padding="10dp"
            android:src="@drawable/vang" />

        <TextView
            android:id="@+id/txtTien"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:inputType="number"
            android:paddingLeft="10dp"

            android:text="10000"
            android:textColor="#FAE20F"
            android:textSize="20dp" />

        <ImageButton
            android:id="@+id/btnMoBat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:layout_weight="2"
            android:background="#005826"
            android:padding="20dp"
            android:scaleType="centerCrop"
            android:src="@drawable/mobat" />

        <TextView
            android:id="@+id/txtThongbao"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textColor="#FAE20F"
            android:textSize="20dp" />

        <ImageButton
            android:id="@+id/btnTiep"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:layout_weight="2"
            android:background="#005826"
            android:padding="20dp"
            android:scaleType="centerCrop"
            android:src="@drawable/choitiep" />


    </LinearLayout>


</LinearLayout>
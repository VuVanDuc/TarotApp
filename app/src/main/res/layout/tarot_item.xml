<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="120dp"
    android:layout_height="230dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="20dp"
    android:layout_marginLeft="10dp"
    android:background="@android:color/transparent">

    <RelativeLayout
        android:layout_width="120dp"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/tarot_image"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/bachduong"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/tarot_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tarot_image"
            android:text="BẠCH DƯƠNG"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="10dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tarot_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tarot_name"
            android:text="(21/03-19/04)"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="10dp" />

    </RelativeLayout>
</RelativeLayout>